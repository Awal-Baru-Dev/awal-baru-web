# AwalBaru.com Environment Variables
# Copy this file to .env and fill in your values

# ===================
# App Configuration
# ===================
VITE_APP_TITLE=AwalBaru.com
VITE_APP_URL=http://localhost:3000

# ===================
# Supabase Configuration
# ===================
# Get these from: Supabase Dashboard > Settings > API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (server-side only, for webhooks)
# SECURITY: Never expose this to the client!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================
# DOKU Payment Gateway
# ===================
# Get these from: DOKU Dashboard > Settings > API
DOKU_CLIENT_ID=your-doku-client-id
DOKU_SECRET_KEY=your-doku-secret-key
DOKU_ENVIRONMENT=sandbox
VITE_DOKU_ENVIRONMENT=sandbox

# ===================
# Sentry Error Tracking (Optional)
# ===================
VITE_SENTRY_DSN=

# ===================
# Feature Flags
# ===================
# Set to 'false' to disable email verification requirement
VITE_REQUIRE_EMAIL_VERIFICATION=true

# ===================
# Server Configuration
# ===================
# Used for payment callbacks and webhooks
SERVER_URL=http://localhost:3000
